{
  "exclude": [
    "node_modules"
  ],
  "types": [
    "jest"
  ],
  "compilerOptions": {    
    "outDir": "./dist/",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "sourceMap": true,
    "pretty": true,
    "removeComments": true,
    "experimentalDecorators": true
  }
}